CREATE TABLE departamentos 
(
codigo_dpto char(3) NOT NULL,
nombre char(40) NOT NULL
);

/*CREAR CLAVE PRIMARIA */
ALTER TABLE departamentos
    ADD (CONSTRAINT pk_departamentos PRIMARY KEY (codigo_dpto));
DESC departamentos;

Create Table LIBRO
(
COD_LIBRO VARCHAR2(4) NOT NULL,
AUTOR VARCHAR2(20) NOT NULL ,
TITULO VARCHAR2(40) NOT NULL,
EDITOR VARCHAR2(40) NOT NULL,
COD_CLASE VARCHAR2(10) NOT NULL
);

CREATE TABLE USUARIO
(
RUT VARCHAR2(10) NOT NULL,
NOMBRE VARCHAR2(20) NOT NULL,
DIRECCION VARCHAR2(50) NOT NULL
);

CREATE TABLE CLASE
(
COD_CLASE VARCHAR2(10) NOT NULL,
TIEMPO_DE_PRESTAMO VARCHAR(6) NOT NULL
);

CREATE TABLE PRESTAMO
(
COD_LIBRO VARCHAR2(4)NOT NULL,
RUT VARCHAR2(10) NOT NULL,
FECHA_INICIO VARCHAR2(10) NOT NULL,
FECHA_FIN VARCHAR2(10) NOT NULL
);

DESC PRESTAMO;

ALTER TABLE CLASE
    ADD PRIMARY KEY(COD_CLASE);
    
ALTER TABLE LIBRO
    ADD PRIMARY KEY(COD_LIBRO);
    
ALTER TABLE LIBRO
    ADD FOREIGN KEY(COD_CLASE) REFERENCES CLASE(COD_CLASE);

ALTER TABLE USUARIO
    ADD PRIMARY KEY(RUT);
    
    
